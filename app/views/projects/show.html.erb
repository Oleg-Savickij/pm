<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<p>
  <strong>Summary:</strong>
  <%= @project.summary %>
</p>
<p>
  <strong>Start date:</strong>
  <%= @project.start_date %>
</p>
<p>
  <strong>End date:</strong>
  <%= @project.end_date %>
</p>

<h2>Tasks</h2>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Assign</th>
    <th></th>
  </tr>

  <% @project.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.users %></td>
        <td class="btn-group">
          <%= link_to 'Show', project_task_path(task), { :class => "btn btn-default" } %>
          <%= link_to 'Edit', edit_project_task_path(task), { :class => "btn btn-default" } %>
          <%= link_to 'Destroy', project_task_path(task),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      :class => "btn btn-default" %>

      </tr>
  <% end %>
</table>

<h3>Add a task:</h3>
<%= link_to 'New task', new_project_task_path(@project), { :class => "btn btn-default" } %>

<td><%= link_to 'Back', projects_path, { :class => "btn btn-default" } %></td>