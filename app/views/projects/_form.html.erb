<div style="margin-left: 30%">
<%= form_for @project do |f| %>
    <% if @project.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2>
            <%= pluralize(@project.errors.count, "error") %> prohibited
            this project from being saved:
          </h2>
          <ul>
            <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p class="input-group">
      <%= f.label :"Project name" %><br>
      <%= f.text_field :name, { :class => "form-control", :type => "text"} %><br>
      <%= f.label :"Description" %><br>
      <%= f.text_field :summary, { :class => "form-control", :type => "text"} %>
    </p>

    <p class="input-group">
      <%= f.label :"Start date" %><br>
      <%= f.date_select :start_date, { :class => "btn btn-default"}, :type => "text" %><br>
      <%= f.label :"End date" %><br>
      <%= f.date_select :end_date, { :class => "btn btn-default", :type => "date"}%>
    </p>

    <p>
      <%= f.submit :class => "btn btn-default" %>
    </p>
<% end %>
</div>
